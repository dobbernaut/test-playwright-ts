{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "module": "commonjs",
    "target": "es2021",
    "esModuleInterop": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "typeRoots": [
      "node_modules/@types",
      "types"
    ],
    "types": [
      "node",
      "global",
      "playwright",
      "@types/chai",
      "@types/mocha",
    ],
    "paths": {
      "@config/*": ["./config/*"],
      "@constant/*": ["./constants/*"],
      "@page/*": ["./pages/*"],
      "@service/*": ["./services/*"],
      "@type/*": ["./types/*"],
    }
  }
}
